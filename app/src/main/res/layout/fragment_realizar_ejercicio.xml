<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentos.FragmentRealizarEjercicio">

    <ImageButton
        android:id="@+id/ibCancelarRealizarEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_principal"
        android:backgroundTint="@color/transparente"
        android:src="@drawable/ic_baseline_close_24"
        android:tint="@color/color_principal"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="1dp"/>

    <ImageButton
        android:id="@+id/ibConfirmarRealizarEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_principal"
        android:backgroundTint="@color/transparente"
        android:src="@drawable/ic_baseline_check_24"
        android:tint="@color/color_principal"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSeriesRealizarEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="700dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/ibCancelarRealizarEjercicio">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>